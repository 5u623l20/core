  <field>
    <id>metricbeat.outputs.logstash.ssl.enabled</id>
    <label>Enabled SSL</label>
    <type>checkbox</type>
    <help>Enable SSL configuration</help>
    <advanced>true</advanced>
  </field>
  <field>
    <id>metricbeat.outputs.logstash.ssl.ca</id>
    <label>Certificate Authority</label>
    <type>textbox</type>
    <help>
      <![CDATA[Root certificates for HTTPS server verification]]>
    </help>
    <advanced>true</advanced>
  </field>
  <field>
    <id>metricbeat.outputs.logstash.ssl.client</id>
    <label>Client Certificate</label>
    <type>textbox</type>
    <help>
      <![CDATA[Certificate for SSL client authentication]]>
    </help>
    <advanced>true</advanced>
  </field>
  <field>
    <id>metricbeat.outputs.logstash.ssl.key</id>
    <label>Client Key</label>
    <type>textbox</type>
    <help>
      <![CDATA[Client Certificate Key]]>
    </help>
    <advanced>true</advanced>
  </field>
