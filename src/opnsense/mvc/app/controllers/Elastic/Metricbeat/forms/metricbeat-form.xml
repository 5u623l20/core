  </field>
  <field>
    <label>Logstash Output</label>
    <type>header</type>
  </field>
  <field>
    <id>metricbeat.outputs.logstash.hosts</id>
    <label>Host(s)</label>
    <type>textbox</type>
    <help>
      <![CDATA[Logstash hosts - line-break delimited list of hosts to connect to. No spaces permitted, only line-breaks.]]>
    </help>
  </field>
